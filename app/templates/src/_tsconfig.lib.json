{<% if(ngVersion === '2.0.0') { %>
  "compilerOptions": {
      "target": "es5",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "inlineSources": true,
      "declaration": true,
      "experimentalDecorators": true,
      "noImplicitAny": true,
      "suppressImplicitAnyIndexErrors": true,
      "rootDir": "./",
      "baseUrl": "",
      "skipLibCheck": true,
      "stripInternal": true,
      "outDir": "../tmp/lib-es5/",
      "lib": [
          "es2015",
          "dom"
      ]
  },
  "files": [
      "./index.ts"
  ],

  "angularCompilerOptions": {
      "strictMetadataEmit": true,
      "skipTemplateCodegen": true,
      "genDir": "../tmp/lib-gen-dir/"
  }<% } else { %>
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../tmp/lib-es2015/",
    "target": "es2015",
    "rootDir": "./",
    "baseUrl": "",
    "types": []
  },
  "files": [
    "./index.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "genDir": "../tmp/lib-gen-dir/",
    "flatModuleOutFile": "<%= unscopedProjectName %>.js",
    "flatModuleId": "<%= unscopedProjectName %>",
    "annotateForClosureCompiler": true
  }<% } %>
}
